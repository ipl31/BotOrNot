<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BotOrNot.Avalonia.ViewModels"
        xmlns:models="using:BotOrNot.Core.Models"
        xmlns:conv="using:BotOrNot.Avalonia.Converters"
        x:Class="BotOrNot.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Bot or Not?"
        Width="1100"
        Height="800">

    <Window.Resources>
        <conv:BotColorConverter x:Key="BotColorConverter" />
        <conv:BotBorderColorConverter x:Key="BotBorderColorConverter" />
        <conv:PlatformNameConverter x:Key="PlatformNameConverter" />
    </Window.Resources>

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,Auto,2*,Auto,3*">

        <!-- Top Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="8" Spacing="8">
            <Image Source="avares://BotOrNot.Avalonia/Assets/logo.png"
                   Width="32"
                   Height="32"
                   VerticalAlignment="Center" />
            <Button x:Name="OpenButton" Content="Select Replay File" Click="OpenReplay_Click" />
            <Button x:Name="ColumnsButton" Content="Columns" />
            <ProgressBar IsIndeterminate="True"
                         IsVisible="{Binding IsLoading}"
                         Width="100"
                         Height="20"
                         Margin="8,0,0,0"/>
            <TextBlock Text="Data presented is not guaranteed to be accurate."
                       Foreground="#888888"
                       VerticalAlignment="Center"
                       Margin="16,0,0,0" />
        </StackPanel>

        <!-- Error Banner -->
        <Border Grid.Row="0"
                Background="#FFDDDD"
                BorderBrush="#FF6666"
                BorderThickness="1"
                Padding="8"
                Margin="8,40,8,0"
                CornerRadius="4"
                IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="#CC0000" />
        </Border>

        <!-- Metadata Box -->
        <TextBox Grid.Row="1"
                 Text="{Binding MetadataText}"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 Height="80"
                 Margin="8,0,8,8"
                 ScrollViewer.VerticalScrollBarVisibility="Auto" />

        <!-- Owner Eliminations Header -->
        <TextBlock Grid.Row="2"
                   Text="{Binding OwnerKillsHeader}"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="8,8,8,4" />

        <!-- Owner Eliminations Grid -->
        <DataGrid Grid.Row="3"
                  x:Name="OwnerEliminationsGrid"
                  ItemsSource="{Binding OwnerEliminations}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="True"
                  GridLinesVisibility="Horizontal"
                  Margin="8,0,8,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="364" IsVisible="False" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="195" />
                <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="104" />
                <DataGridTemplateColumn Header="Bot" Width="78">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="models:PlayerRow">
                            <Ellipse Width="14" Height="14"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Fill="{Binding Bot, Converter={StaticResource BotColorConverter}}"
                                     Stroke="{Binding Bot, Converter={StaticResource BotBorderColorConverter}}"
                                     StrokeThickness="1.5" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Platform" Binding="{Binding Platform, Converter={StaticResource PlatformNameConverter}}" Width="130" />
                <DataGridTextColumn Header="Kills" Binding="{Binding Kills}" Width="91" />
                <DataGridTextColumn Header="Death Cause" Binding="{Binding DeathCause}" Width="156" />
                <DataGridTextColumn Header="Pickaxe" Binding="{Binding Pickaxe}" Width="195" IsVisible="False" />
                <DataGridTextColumn Header="Glider" Binding="{Binding Glider}" Width="195" IsVisible="False" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Players Seen Header -->
        <TextBlock Grid.Row="4"
                   Text="{Binding PlayersSeenHeader}"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="8,8,8,4" />

        <!-- All Players Grid -->
        <DataGrid Grid.Row="5"
                  x:Name="PlayersGrid"
                  ItemsSource="{Binding Players}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="True"
                  GridLinesVisibility="Horizontal"
                  Margin="8,0,8,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="364" IsVisible="False" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="195" />
                <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="104" />
                <DataGridTemplateColumn Header="Bot" Width="78">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="models:PlayerRow">
                            <Ellipse Width="14" Height="14"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Fill="{Binding Bot, Converter={StaticResource BotColorConverter}}"
                                     Stroke="{Binding Bot, Converter={StaticResource BotBorderColorConverter}}"
                                     StrokeThickness="1.5" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Platform" Binding="{Binding Platform, Converter={StaticResource PlatformNameConverter}}" Width="130" />
                <DataGridTextColumn Header="Kills" Binding="{Binding Kills}" Width="91" />
                <DataGridTextColumn Header="Death Cause" Binding="{Binding DeathCause}" Width="156" />
                <DataGridTextColumn Header="Pickaxe" Binding="{Binding Pickaxe}" Width="195" IsVisible="False" />
                <DataGridTextColumn Header="Glider" Binding="{Binding Glider}" Width="195" IsVisible="False" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>