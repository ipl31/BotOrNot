<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BotOrNot.Avalonia.ViewModels"
        xmlns:models="using:BotOrNot.Core.Models"
        xmlns:conv="using:BotOrNot.Avalonia.Converters"
        x:Class="BotOrNot.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding WindowTitle}"
        Width="1100"
        Height="800">

    <Window.Resources>
        <conv:BotColorConverter x:Key="BotColorConverter" />
        <conv:BotBorderColorConverter x:Key="BotBorderColorConverter" />
        <conv:PlatformNameConverter x:Key="PlatformNameConverter" />
    </Window.Resources>

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,2*,Auto,3*">

        <!-- Top Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="8" Spacing="8">
            <Image Source="avares://BotOrNot/Assets/logo.png"
                   Width="32"
                   Height="32"
                   VerticalAlignment="Center" />
            <Button x:Name="OpenButton" Content="Select Replay File" Click="OpenReplay_Click" />
            <Button x:Name="ColumnsButton" Content="Columns" />
            <ProgressBar IsIndeterminate="True"
                         IsVisible="{Binding IsLoading}"
                         Width="100"
                         Height="20"
                         Margin="8,0,0,0"/>
            <TextBlock Text="Data presented is not guaranteed to be accurate."
                       Foreground="#888888"
                       VerticalAlignment="Center"
                       Margin="16,0,0,0" />
        </StackPanel>

        <!-- Error Banner -->
        <Border Grid.Row="0"
                Background="#FFDDDD"
                BorderBrush="#FF6666"
                BorderThickness="1"
                Padding="8"
                Margin="8,40,8,0"
                CornerRadius="4"
                IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="#CC0000" />
        </Border>

        <!-- Summary Header Bar -->
        <Border Grid.Row="1"
                Background="#F5F5F5"
                BorderBrush="#CCCCCC"
                BorderThickness="0,0,0,1"
                Padding="8,6"
                Margin="0"
                IsVisible="{Binding HasMetadata}"
                ToolTip.Tip="{Binding PlaylistName}">
            <WrapPanel Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Mode -->
                <Border Background="#E8E8E8" CornerRadius="4" Padding="8,3" Margin="0,2,6,2">
                    <TextBlock Text="{Binding GameMode}" FontSize="12" VerticalAlignment="Center"
                               MaxWidth="300" TextTrimming="CharacterEllipsis" />
                </Border>

                <!-- Placement -->
                <Border Background="#E8E8E8" CornerRadius="4" Padding="8,3" Margin="0,2,6,2">
                    <TextBlock Text="{Binding PlacementText}" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" />
                </Border>

                <!-- Duration -->
                <Border Background="#E8E8E8" CornerRadius="4" Padding="8,3" Margin="0,2,6,2">
                    <TextBlock Text="{Binding DurationText}" FontSize="12" VerticalAlignment="Center" />
                </Border>

                <!-- Eliminated by (conditional) -->
                <Border Background="#E8E8E8" CornerRadius="4" Padding="8,3" Margin="0,2,6,2"
                        IsVisible="{Binding EliminatorName, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="Eliminated by:" FontSize="12" VerticalAlignment="Center" />
                        <Button Content="{Binding EliminatorName}"
                                Command="{Binding FilterByPlayerCommand}"
                                CommandParameter="{Binding EliminatorName}"
                                Padding="2,0"
                                FontSize="12"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="#0078D4"
                                Cursor="Hand"
                                VerticalAlignment="Center">
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Foreground" Value="#005A9E" />
                                </Style>
                            </Button.Styles>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Elims Summary -->
                <Border Background="#E8E8E8" CornerRadius="4" Padding="8,3" Margin="0,2,6,2">
                    <TextBlock Text="{Binding ElimsSummary}" FontSize="12" VerticalAlignment="Center" />
                </Border>
            </WrapPanel>
        </Border>

        <!-- Filter Box -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="8,8,8,4" Spacing="8">
            <TextBlock Text="Filter:" VerticalAlignment="Center" FontWeight="SemiBold" />
            <TextBox Text="{Binding FilterText}"
                     Watermark="Type to filter results..."
                     Width="400"
                     Height="30" />
        </StackPanel>

        <!-- Owner Eliminations Header -->
        <TextBlock Grid.Row="3"
                   Text="{Binding OwnerKillsHeader}"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="8,8,8,4" />

        <!-- Owner Eliminations Grid -->
        <DataGrid Grid.Row="4"
                  x:Name="OwnerEliminationsGrid"
                  ItemsSource="{Binding OwnerEliminations}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="True"
                  GridLinesVisibility="Horizontal"
                  Margin="8,0,8,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="364" IsVisible="False" />
                <DataGridTemplateColumn Header="Name" Width="195" CanUserSort="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="models:PlayerRow">
                            <Panel>
                                <Button Content="{Binding Name}"
                                        Click="OpenFortniteTracker_Click"
                                        IsVisible="{Binding !IsBot}"
                                        Padding="4,2"
                                        FontSize="12"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#0078D4"
                                        Cursor="Hand"
                                        ToolTip.Tip="Click to check if this player has a Fortnite Tracker page">
                                    <Button.Styles>
                                        <Style Selector="Button:pointerover">
                                            <Setter Property="Foreground" Value="#005A9E" />
                                        </Style>
                                    </Button.Styles>
                                </Button>
                                <TextBlock Text="{Binding Name}"
                                           IsVisible="{Binding IsBot}"
                                           VerticalAlignment="Center"
                                           Margin="4,0" />
                            </Panel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="104" />
                <DataGridTemplateColumn Header="Bot" Width="78" CanUserSort="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="models:PlayerRow">
                            <Ellipse Width="14" Height="14"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Fill="{Binding Bot, Converter={StaticResource BotColorConverter}}"
                                     Stroke="{Binding Bot, Converter={StaticResource BotBorderColorConverter}}"
                                     StrokeThickness="1.5" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Platform" Binding="{Binding Platform, Converter={StaticResource PlatformNameConverter}}" Width="130" />
                <DataGridTextColumn Header="Kills" Binding="{Binding Kills}" Width="91" />
                <DataGridTextColumn Header="Squad" Binding="{Binding TeamIndex}" Width="70" />
                <DataGridTextColumn Header="Placement" Binding="{Binding Placement}" Width="90" />
                <DataGridTextColumn Header="Death Cause" Binding="{Binding DeathCause}" Width="156" />
                <DataGridTextColumn Header="Pickaxe" Binding="{Binding Pickaxe}" Width="195" IsVisible="False" />
                <DataGridTextColumn Header="Glider" Binding="{Binding Glider}" Width="195" IsVisible="False" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Players Seen Header -->
        <TextBlock Grid.Row="5"
                   Text="{Binding PlayersSeenHeader}"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="8,8,8,4" />

        <!-- All Players Grid -->
        <DataGrid Grid.Row="6"
                  x:Name="PlayersGrid"
                  ItemsSource="{Binding Players}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="True"
                  GridLinesVisibility="Horizontal"
                  Margin="8,0,8,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="364" IsVisible="False" />
                <DataGridTemplateColumn Header="Name" Width="195" CanUserSort="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="models:PlayerRow">
                            <Panel>
                                <Button Content="{Binding Name}"
                                        Click="OpenFortniteTracker_Click"
                                        IsVisible="{Binding !IsBot}"
                                        Padding="4,2"
                                        FontSize="12"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#0078D4"
                                        Cursor="Hand"
                                        ToolTip.Tip="Click to check if this player has a Fortnite Tracker page">
                                    <Button.Styles>
                                        <Style Selector="Button:pointerover">
                                            <Setter Property="Foreground" Value="#005A9E" />
                                        </Style>
                                    </Button.Styles>
                                </Button>
                                <TextBlock Text="{Binding Name}"
                                           IsVisible="{Binding IsBot}"
                                           VerticalAlignment="Center"
                                           Margin="4,0" />
                            </Panel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="104" />
                <DataGridTemplateColumn Header="Bot" Width="78" CanUserSort="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="models:PlayerRow">
                            <Ellipse Width="14" Height="14"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Fill="{Binding Bot, Converter={StaticResource BotColorConverter}}"
                                     Stroke="{Binding Bot, Converter={StaticResource BotBorderColorConverter}}"
                                     StrokeThickness="1.5" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Platform" Binding="{Binding Platform, Converter={StaticResource PlatformNameConverter}}" Width="130" />
                <DataGridTextColumn Header="Kills" Binding="{Binding Kills}" Width="91" />
                <DataGridTextColumn Header="Squad" Binding="{Binding TeamIndex}" Width="70" />
                <DataGridTextColumn Header="Placement" Binding="{Binding Placement}" Width="90" />
                <DataGridTextColumn Header="Death Cause" Binding="{Binding DeathCause}" Width="156" />
                <DataGridTextColumn Header="Pickaxe" Binding="{Binding Pickaxe}" Width="195" IsVisible="False" />
                <DataGridTextColumn Header="Glider" Binding="{Binding Glider}" Width="195" IsVisible="False" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>